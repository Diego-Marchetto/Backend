<div class="contProduct">
    <p>
        {{#if product}}
        <div>
            <p>Name: {{product.name}}</h2>
            <p>Description: {{product.description}}</p>
            <p>Price: {{product.price}}</p>
            <p>Category: {{product.category}}</p>
            <img>Image: {{product.thumbnail}}</img>
            <p>stock: {{product.stock}}</p>
            <p>ID: {{product._id}}</p>
            <button class="addProductCart" data-product-id={{product._id}}
            data-cart-id={{cid}} id="addProductCart">Agregar al
                carrito</button>
        </div>
        {{/if}}
    </p>
    <a href="/products"> Ir a productos</a>
    <a href="/cart/{{cid}}"> Ir al carrito</a>
</div>

<script type="module" src="/js/index.js"></script>